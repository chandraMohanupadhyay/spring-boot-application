pipeline {
    agent any

    stages {

        stage ('checkout'){
            steps {
                echo 'checking in git...'
            git 'https://github.com/chandraMohanupadhyay/spring-boot-application.git'
            }  
        }
        
        stage ('compile'){
            steps {
                sh 'mvn compile'
            }
        }

        stage ('test'){
            steps {
                sh 'mvn test'
            }
        }

        stage ('build'){
            steps {
                sh 'mvn package'
            }
        }

    }
}